@model IEnumerable<WebAPI.Models.NationalMinority>

<h2>National Minorities</h2>

<a href="/NationalMinority/Add" class="btn btn-success mb-3">Add National Minority</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Heritages Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var minority in Model)
        {
            <tr>
                <td>@minority.Name</td>
                <td>@minority.Heritages.Count</td>
                <td>
                    <a href="/NationalMinority/Edit/@minority.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form method="post" action="/NationalMinority/Delete/@minority.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>