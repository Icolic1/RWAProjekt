@model HeritageEditViewModel

<form method="post">
    <div class="mb-3">
        <label for="name" class="form-label">Name:</label>
        <input type="text" id="name" name="Name" class="form-control" value="@Model.Name" required>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea id="description" name="Description" class="form-control" required>@Model.Description</textarea>
    </div>
    <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input type="text" id="location" name="Location" class="form-control" value="@Model.Location" required>
    </div>
    <div class="mb-3">
        <label for="year" class="form-label">Year:</label>
        <input type="number" id="year" name="Year" class="form-control" value="@Model.Year" required>
    </div>
    <div class="mb-3">
        <label for="nationalMinorityId" class="form-label">National Minority:</label>
        <select id="nationalMinorityId" name="NationalMinorityId" class="form-select" required>
            <option value="" disabled>-- Select a National Minority --</option>
            @foreach (var minority in Model.NationalMinorities)
            {
                <option value="@minority.Id" selected="@(Model.NationalMinorityId == minority.Id)">
                    @minority.Name
                </option>
            }
        </select>
    </div>
    <h4>Comments</h4>
    @if (Model.Comments.Any())
    {
        <ul class="list-group">
            @foreach (var comment in Model.Comments)
            {
                <li class="list-group-item">
                    <strong>@comment.Username</strong> - @comment.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                    <br />
                    @comment.Comment
                </li>
            }
        </ul>
    }
    else
    {
        <p>No comments yet.</p>
    }

    <button type="submit" class="btn btn-primary">Save</button>
</form>

